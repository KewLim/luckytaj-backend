# Server Configuration
PORT=3003
NODE_ENV=production

# Database
MONGODB_URI=mongodb://localhost:27017/luckytaj-admin

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://www.luckytaj.com,https://luckytaj.com

# File Upload Limits
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Admin (if using Firebase Admin SDK)
FIREBASE_PROJECT_ID=luckytaj-d4624
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@luckytaj-d4624.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token